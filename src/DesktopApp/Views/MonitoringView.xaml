<UserControl x:Class="SuperPanel.DesktopApp.Views.MonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="System Monitoring" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Real-time Stats -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- CPU Chart -->
                <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        CornerRadius="5" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="CPU Usage" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding SystemInfo.CpuUsagePercent, StringFormat='{0:F1}%'}" 
                                   FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                        
                        <!-- CPU Usage Chart Placeholder -->
                        <Border Height="150" Background="LightGray" CornerRadius="3">
                            <TextBlock Text="CPU Chart" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Foreground="Gray"/>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Memory Chart -->
                <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        CornerRadius="5" Margin="10,0,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Memory Usage" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="{Binding SystemInfo.AvailableMemoryMB, StringFormat='{0}'}" 
                                       FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text=" / " FontSize="24" Margin="5,0"/>
                            <TextBlock Text="{Binding SystemInfo.TotalMemoryMB, StringFormat='{0} MB'}" 
                                       FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <!-- Memory Usage Chart Placeholder -->
                        <Border Height="150" Background="LightGray" CornerRadius="3">
                            <TextBlock Text="Memory Chart" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Foreground="Gray"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Disk Usage -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                    CornerRadius="5" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Disk Usage" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                    
                    <ItemsControl ItemsSource="{Binding SystemInfo.Drives}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Bold" 
                                               VerticalAlignment="Center" MinWidth="60"/>
                                    <ProgressBar Grid.Column="1" Value="{Binding UsagePercent}" Maximum="100" 
                                                 Height="20" Margin="10,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding UsagePercent, StringFormat='{0:F1}%'}" 
                                               VerticalAlignment="Center" MinWidth="50" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="3" 
                                               Text="{Binding AvailableSpaceGB, StringFormat='{0} GB free'}" 
                                               VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Process List -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                    CornerRadius="5" Padding="20">
                <StackPanel>
                    <TextBlock Text="Top Processes by Memory Usage" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding SystemInfo.TopProcesses}" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Background="Transparent"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Process ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryMB}" Width="100"/>
                            <DataGridTextColumn Header="CPU %" Binding="{Binding CpuPercent, StringFormat='{0:F1}'}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
            <!-- System Information -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                    CornerRadius="5" Padding="20" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="System Information" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding SystemInfo.ServerName, StringFormat='Server: {0}'}" Margin="0,5"/>
                            <TextBlock Text="{Binding SystemInfo.OperatingSystem, StringFormat='OS: {0}'}" Margin="0,5"/>
                            <TextBlock Text="{Binding SystemInfo.Architecture, StringFormat='Architecture: {0}'}" Margin="0,5"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding SystemInfo.TotalMemoryMB, StringFormat='Total Memory: {0} MB'}" Margin="0,5"/>
                            <TextBlock Text="{Binding SystemInfo.LastUpdated, StringFormat='Last Updated: {0:yyyy-MM-dd HH:mm:ss}'}" Margin="0,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>